    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="/stylesheets/reset.css" rel="stylesheet" />
    <link href="/stylesheets/common.css" rel="stylesheet" />
    <link href="/stylesheets/login_main.css" rel="stylesheet" />
</head>
<body>
    <header>
        <h1><%= bodyTitle %></h1>
    </header>




    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <form method="post" action=""  class="form-horizontal" name="login_body">
                    <span class="heading">用户登录</span>
                    <div class="form-group">
                        <input type="text" class="form-control" name="id_input" placeholder="用户名">
                        <i class="fa fa-user"></i>
                    </div>
                    <div class="form-group help">
                        <input type="password" class="form-control" name="pwd_input"  placeholder="密　码">
                        <i class="fa fa-lock"></i>
                        <a href="#" class="fa fa-question-circle"></a>
                    </div>
                    <div class="form-group" id="selectId">
                        <input type="radio" name="stu_login" id="type1" checked> 学生
                        <input type="radio" name="stu_login" id="type2"> 老师
                        <input type="radio" name="stu_login" id="type3"> 教务主任   
                        <input type="radio" name="stu_login" id="type4"> 管理员   
                    </div>
                    <div class="form-group bntt">
                        <button type="submit" class="btn btn-default" id="submit">登录</button>
                    <div>
                </form>
            </div>
        </div>
        <footer class="copy-right">
            <p>Copyright &copy; 2017.ruanjunguang All rights reserved.</p>
        </footer>
    </div>
    <script type="text/javascript" src="/javascripts/loginChecking.js"></script>
    <!-- 新 Bootstrap 核心 CSS 文件 -->
   
</body>
</html>


